<Window x:Class="Multi_Translator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multi_Translator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ComboBox Name="languageList"
                  Height="20" 
                  Width="200" 
                  Grid.Column="1"
                  Margin="10px,10px,10px,100px"/>
        <TextBlock Name="inputText"
                   Grid.Column="0" 
                   Margin="10px,10px,10px,100px"/>
        <TextBlock Name="outputText"
                   Grid.Column="1" 
                   Margin="10px,150px,10px,10px"/>
        <Button Name="translateButton"
                Grid.Column="0"
                Margin="75px,250px,75px,40px"
                Content="Translate"
                Click="translateButton_Click"/>
    </Grid>
</Window>
